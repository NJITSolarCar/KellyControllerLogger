<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox maxWidth="1.7976931348623157E308">
               <children>
                  <Label maxHeight="1.7976931348623157E308" text="Controller CAN ID: " />
                  <TextField fx:id="controllerCanIdField" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="20.0" maxWidth="1.7976931348623157E308">
               <children>
                  <Label maxHeight="1.7976931348623157E308" text="Controller Response ID: " />
                  <TextField fx:id="controllerResponseIdField" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="20.0" maxWidth="1.7976931348623157E308">
               <children>
                  <Label maxHeight="1.7976931348623157E308" text="Sampling Rate (Hz): " />
                  <TextField fx:id="samplingRateField" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="60.0" maxWidth="1.7976931348623157E308">
               <children>
                  <Label maxHeight="1.7976931348623157E308" text="RMS Sample Period: " />
                  <TextField fx:id="samplePeriodField" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="60.0" maxWidth="1.7976931348623157E308">
               <children>
                  <Label maxHeight="1.7976931348623157E308" text="Log Directory: " />
                  <TextField fx:id="logDirectoryField" HBox.hgrow="ALWAYS" />
                  <Button fx:id="browseButton" mnemonicParsing="false" text="...">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Pane prefHeight="0.0" VBox.vgrow="ALWAYS" />
            <AnchorPane>
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" text="Save" AnchorPane.leftAnchor="0.0" />
                  <Button fx:id="cancelButton" layoutX="75.0" layoutY="2.0" mnemonicParsing="false" text="Cancel" AnchorPane.rightAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
